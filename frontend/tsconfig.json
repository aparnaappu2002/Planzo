{
  "compilerOptions": {
    "jsx": "react-jsx",          // âœ… Required for React + JSX in .tsx files
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler", // or "node" if not using Vite
    "baseUrl": "src",
    "paths": {
      "@/*": ["./*"]
    },
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
